{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "allowJs": false,
    "target": "es6",
    "lib": ["es2015"],
    "strict": true,
    "strictNullChecks": true,
    "inlineSourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node", "jest"],
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
